<h1>Register</h1>

<div id="register">
  <%= form_for @user do |form| %>
    <%= render 'shared/form_errors' %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    
    <%= form.label :email %>
    <%= form.text_field :email %>
    
    <%= form.label :password %>
    <%= form.password_field :password %>
    
    <%= form.label :password_confirmation, 'Re-type your password' %>
    <%= form.password_field :password_confirmation %>
    
    <%= form.submit 'Register naow !', class: 'btn btn-large' %>
  <% end %>
</div>
