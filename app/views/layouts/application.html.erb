<!DOCTYPE html>
<html>
<head>
  <title><%= get_title @title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%=	render 'layouts/header' %>
  <%=	render 'layouts/sidebar' %>
  <div class="container-fluid">
    <div id="content">
      <div class="hero-unit">
        <%= yield %>
      </div>
    </div>
    <% if Rails.env.development? then %>
      <div class="debug">
        <%= debug(params) %> 
      </div>
    <% end %>
  </div>
  <%= javascript_include_tag "application" %>
</body>
</html>
